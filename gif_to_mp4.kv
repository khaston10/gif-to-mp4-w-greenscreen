<Label>
    font_size: 15

<Button>
    size_hint: 0.3, 0.2
    font_size: 20
    background_normal: ''
    background_color: (.2, .2, .2, 1)

<MyLayout>:
    id: my_widget

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: root.width, root.height
        padding: 30
        spacing: 20
        height: sp(40)

        FileChooserIconView:
            #size_hint: 0.3, .7
            id: filechooser
            path: root.load_home_directory_on_start()
            size_hint: (1, 2)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .3
            pos_hint: {"center_x":.5, "y": 0}
            spacing: 40

            Button:
                text: "Select File"
                id: file_select
                size_hint: (.2, .6)
                on_release: root.get_file_path(filechooser.selection)

            Button:
                text: "Set Home Directory"
                id: home_directory
                size_hint: (.2, .6)
                on_press: root.set_home_directory()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: .5, .5
            pos_hint: {"center_x":.5, "center_y":.5}
            padding: 0

            CheckBox:
                canvas.before:
                    Color:
                        rgb: 0,1,0
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                active: True
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "GREEN")

            CheckBox
                canvas.before:
                    Color:
                        rgb: 1, 1, .4
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "YELLOW")

            CheckBox
                canvas.before:
                    Color:
                        rgb: 1, .4, 1
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "PINK")

        Button:
            text: "Convert"
            id: convert
            size_hint: (.5, .3)
            pos_hint: {"x":.25}
            on_press: root.convert()

        Label:
            text: ""
            id: feedback
            size_hint: (.5, .3)
            pos_hint: {"x":.25}