<Label>
    font_size: 15

<Button>
    size_hint: 0.3, 0.2
    font_size: 20
    background_normal: ''
    background_color: (.16, .30, .41)

<MyLayout>:
    r_size: [root.size[0]/ 1.2, root.size[1]/2]
    r1_size: [root.size[0] / 1.2, root.size[1] * .45]
    p1: [root.size[0] / 1.1, root.size[1] / 2]

    canvas:
        Rectangle:
            source: 'Logo.png'
            pos: -20, -25
            size: 200, 200

    id: my_widget

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: root.width, root.height
        padding: 40
        spacing: 20
        height: sp(40)


        canvas:
            Color:
                rgb: .58, .70, .8
            Rectangle:
                size: root.r1_size
                pos: root.size[0] - root.p1[0], root.size[1] - root.p1[1]


        FileChooserIconView:
            #size_hint: 0.3, .7
            id: filechooser
            path: root.load_home_directory_on_start()
            size_hint: (.8, 2)
            pos_hint: {"center_x":.5, "y": 0}

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .4
            pos_hint: {"center_x":.5, "y": 0}
            spacing: 10

            #canvas:
            #    Color:
            #        rgb: .29, .53, .71
            #    Rectangle:
            #        size: root.r_size
            #        pos: root.size[0] - root.p1[0], root.size[1] - root.p1[1]


            Button:
                text: "Select File"
                id: file_select
                size_hint: (1, 1)
                pos_hint: {"x":.5, "center_y":.5}
                on_release: root.get_file_path(filechooser.selection)

            Button:
                text: "Set Home Directory"
                id: home_directory
                size_hint: (1, 1)
                pos_hint: {"x":.5, "center_y":.5}
                on_press: root.set_home_directory()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: .5, .5
            pos_hint: {"center_x":.5, "center_y":.5}
            padding: 0

            canvas:
                Color:
                    rgb: .16, .30, .41
                Rectangle:
                    size: self.size
                    pos: self.pos

            CheckBox:
                canvas.before:
                    Color:
                        rgb: 0,.2,0
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                active: True
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "GREEN")

            CheckBox
                canvas.before:
                    Color:
                        rgb: .2, .2, .02
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "YELLOW")

            CheckBox
                canvas.before:
                    Color:
                        rgb: .2, .02, .2
                    Rectangle:
                        pos:self.center_x-15, self.center_y-15
                        size:[30,30]
                size_hint_x: 0.3
                group: "color"
                color:.294, .761, .623
                on_active: root.check_box(self, self.active, "PINK")

        Button:
            text: "Convert"
            id: convert
            size_hint: (.5, .3)
            pos_hint: {"x":.25}
            on_press: root.convert()

        Label:
            text: ""
            id: feedback
            size_hint: (.5, .3)
            pos_hint: {"x":.25}